# Howard ID = 02878236
# N = 26 + (02878236 % 11)
# N = 35 
# Base 35
# M = N - 10
# M = 35 - 10
# M = 25 (The range is through the 25th letter of the alphabet, Y)

.data
	maxInput: .space 100
	notValid: .asciiz "Invalid input"
  
.text
main:

#Print the Input String
li $v0, 4		#System call which prints text
la $a0, maxInput	#Reads the user input now stored in the $a0 reg
syscall

li $v0, 8		#System call reads string
la $a0, maxInput	#The users input is moved to the $a0 reg
li $a1, 100		#Load immiadte value of 100 into register (should be able to read up to 100 characters)
syscall

jal subProgramA #jump and link to the subprogam which passes ENTIRE string
  
 #Converts User Input Using Recursion
 subProgramA: 
  ****reusive func****
  
  startFunc: #Looks for leading/trailing blank spaces and tab characters
	li $t2, 0 #Checks for space or tabs within the input
	li $t7, -1 #Used for invaild input program
	lb $s0, ($t0) #Loads the bit that $t0 is pointing to
	#beq $s0, 0, Finish
	beq $s0, 9, Skip #Checks if the bit is a tabs character 
	beq $s0, 32, Skip #Checks if the bit is a space character
	move $t6, $t0 #Stores the first non-space/tab character
	j loopFunc #Jumps to the beginning of the loop function
	
skip:
	addi $t0,$t0,1 #Moves the $t0 to the next element of in the user inputted string
	j startFunc
	
loopFunc:
	lb $s0, ($t0) #Loads the bit that $t0 is pointing to
	beq $s0, 0, substring #Checks if the bit is null
	beq $s0, 10, substring #checks if the bit is a new line 
	addi $t0,$t0,1 #move the $t0 to the next element of the array	




  
